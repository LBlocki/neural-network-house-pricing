<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Group?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import java.net.URL?>
<AnchorPane prefHeight="600.0" prefWidth="885.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.pszt.housePricingNeuralNetwork.controller.RootController">
    <children>
        <HBox alignment="CENTER" maxHeight="Infinity" maxWidth="Infinity" prefHeight="600.0" prefWidth="890.0"
              spacing="50.0" styleClass="container">
            <children>
                <Group>
                    <children>
                        <ImageView fitHeight="255.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true"
                                   style="-fx-opacity: 0.3;">
                            <image>
                                <Image url="@../images/network.png"/>
                            </image>
                        </ImageView>
                        <Label alignment="CENTER" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="261.0"
                               prefWidth="296.0" text="Neural Network for house pricing" textAlignment="CENTER"
                               textFill="WHITE" wrapText="true">
                            <font>
                                <Font name="Kristen ITC" size="31.0"/>
                            </font>
                        </Label>
                        <Group fx:id="buttonGroup">
                            <children>
                                <VBox alignment="BOTTOM_CENTER" maxHeight="Infinity" maxWidth="Infinity"
                                      minHeight="-Infinity" minWidth="-Infinity" prefHeight="450.0" prefWidth="295.0"
                                      spacing="25.0">
                                    <padding>
                                        <Insets top="80.0"/>
                                    </padding>
                                    <children>
                                        <Button alignment="CENTER" contentDisplay="CENTER" maxHeight="40.0"
                                                maxWidth="200.0" minHeight="40.0" mnemonicParsing="false"
                                                onAction="#importNewFileClicked" prefHeight="40.0" prefWidth="200.0"
                                                styleClass="import-button" text="Import data"/>
                                        <Button alignment="CENTER" maxHeight="40.0" maxWidth="200.0" minHeight="40.0"
                                                mnemonicParsing="false" onAction="#startClicked" prefHeight="40.0"
                                                prefWidth="200.0" styleClass="marked-button" text="Start calculations"/>
                                        <Button alignment="CENTER" contentDisplay="CENTER" maxHeight="40.0"
                                                maxWidth="200.0" minHeight="40.0" mnemonicParsing="false"
                                                onAction="#clearConsoleClicked" prefHeight="40.0" prefWidth="200.0"
                                                text="Clear console"/>
                                    </children>
                                </VBox>
                            </children>
                        </Group>
                    </children>
                </Group>
                <VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                      minWidth="-Infinity">
                    <children>
                        <TextArea id="console" fx:id="console" editable="false" focusTraversable="false"
                                  maxHeight="Infinity" maxWidth="Infinity" minHeight="-Infinity" minWidth="-Infinity"
                                  prefHeight="500.0" prefWidth="398.0" VBox.vgrow="ALWAYS" disable="true">
                            <VBox.margin>
                                <Insets/>
                            </VBox.margin>
                        </TextArea>
                    </children>
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                </VBox>
            </children>
            <padding>
                <Insets bottom="50.0" left="50.0" right="50.0" top="50.0"/>
            </padding>
        </HBox>
    </children>
    <stylesheets>
        <URL value="@../style/styles.css"/>
    </stylesheets>
</AnchorPane>
